<% layout("./layouts/boilerplate") %>

<div class="row mt-4">
    <div class="col-6">
        <form action="/wanderlust/loginPost" method="POST" class="needs-validation" novalidate>
            <div class="mb-2">
                <label for="username" class="form-label">Username</label>
            <input type="text"  name="username" class="form-control  mb-1" placeholder="Username" required>
            <div class="invalid-feedback">
                You should enter the username
              </div>
        </div>
            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
            <input type="password"  name="password" class="form-control  mb-1" placeholder="Password" required>
            <div class="invalid-feedback">
                You should enter the password
              </div>
        </div>
        <button class="btn btn-success mt-3" type="submit">Login</button>
        </form>
    </div>
</div>