<% layout("./layouts/boilerplate") %> 
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1  mt-4">
    <% for(let data of searchData){ %> 
       
    <div class="card" style="width: 20rem;">
        <a href="/wanderlust/<%= data._id %>/show" class="link">
    
        <img src="<%= data.image.url %>" class="card-img-top" style="height: 20rem;" alt="...">
      
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= data.title %></b><br>
            &#8377;<%= data.price.toLocaleString("en-IN") %>/ night
          </p>
        </div>
    </a>
      </div>
  
     <% } %> 
    </div>